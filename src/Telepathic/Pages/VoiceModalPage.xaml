<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Telepathic.PageModels"
             xmlns:aloha="clr-namespace:AlohaKit.Animations;assembly=AlohaKit.Animations"
            xmlns:expander="clr-namespace:Syncfusion.Maui.Toolkit.Expander;assembly=Syncfusion.Maui.Toolkit"
             x:Class="Telepathic.Pages.VoiceModalPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Dictate Your Day">
    <ContentPage.Resources>
        <Style x:Key="HeaderLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,20,0,20" />
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="MinimumWidthRequest" Value="120" />
        </Style>
        
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="WidthRequest" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="Red" />
        </Style>
    </ContentPage.Resources>
    
    <Grid Padding="20">
        <!-- Recording Phase -->
        <StackLayout x:Name="RecordingView"
                     IsVisible="{Binding Phase, Converter={StaticResource PhaseToRecordingBool}}"
                     VerticalOptions="Center">
            <Image Source="{StaticResource IconMicrophone}" 
                   HeightRequest="100" 
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsRecording, Converter={StaticResource InvertedBoolConverter}}" />
            <Label Text="Tap to Dictate Your Day" 
                   Style="{StaticResource HeaderLabelStyle}" />
            <Button Text="{Binding RecordButtonText}"
                    Command="{Binding ToggleRecordingCommand}"
                    HorizontalOptions="Center"
                    FontSize="Large"
                    WidthRequest="180"
                    HeightRequest="60"
                    Margin="0,20,0,20" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               HorizontalOptions="Center"
                               HeightRequest="50"
                               WidthRequest="50"
                               Margin="0,20,0,0" />
            
            <!-- Visual indicator for recording state -->
            <Border IsVisible="{Binding IsRecording}"
                   BackgroundColor="Red"
                   StrokeShape="RoundRectangle 20"
                   HeightRequest="20"
                   WidthRequest="20"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0">
                <!-- <Border.Triggers>
                    <DataTrigger TargetType="Border" Binding="{Binding IsRecording}" Value="True">
                        <DataTrigger.EnterActions>
                                <aloha:AnimateDouble 
                                    Easing="SinInOut"
                                    TargetProperty="RecordingPulse.Opacity"
                                    From="1.0"
                                    To="0.3"
                                    Duration="100"/>
                        </DataTrigger.EnterActions>
                    </DataTrigger>
                </Border.Triggers> -->
            </Border>
            <Label x:Name="RecordingPulse"
                   Text="Recording..."
                   IsVisible="{Binding IsRecording}"
                   HorizontalOptions="Center"
                   TextColor="Red"
                   Margin="0,5,0,0" />
        </StackLayout>
        
        <!-- Review Phase -->
        <ScrollView x:Name="ReviewView"
                    IsVisible="{Binding Phase, Converter={StaticResource PhaseToReviewBool}}">
            <StackLayout Padding="20" Spacing="20">
                <!-- Transcript Section -->
                <!-- <expander:SfExpander IsExpanded="False">
                    <expander:SfExpander.Header>
                        <Label Text="Show Transcript" FontSize="Medium" FontAttributes="Bold" />
                    </expander:SfExpander.Header>
                    <Border Margin="0,0,0,10">
                        <Label Text="{Binding Transcript}" />
                    </Border>
                </expander:SfExpander> -->
                
                <!-- Projects Section -->
                <StackLayout IsVisible="{Binding Projects.Count, Converter={StaticResource CountToBoolConverter}}">
                    <Label Text="Projects" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,5" />
                    <CollectionView ItemsSource="{Binding Projects}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5">
                                    <StackLayout>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <Entry Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold" />
                                            
                                            <Button Grid.Column="1"
                                                    Text="ðŸ—‘ï¸"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type pageModels:VoiceModalPageModel}}, Path=DeleteProjectCommand}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource DeleteButtonStyle}" />
                                        </Grid>
                                        
                                        <!-- Project Tasks -->
                                        <Label Text="Tasks:" FontAttributes="Bold" Margin="0,10,0,5" />
                                        <CollectionView ItemsSource="{Binding Tasks}" Margin="15,0,0,0">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Padding="5" ColumnSpacing="5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Entry Text="{Binding Title}" Placeholder="Task title" />
                                                        
                                                        <DatePicker Grid.Column="1"
                                                                   Date="{Binding DueDate}"
                                                                   Format="d"
                                                                   WidthRequest="130"
                                                                   IsEnabled="{Binding DueDate, Converter={StaticResource HasValueConverter}}" />
                                                        
                                                        <Picker Grid.Column="2"
                                                                Title="Priority"
                                                                WidthRequest="90"
                                                                SelectedItem="{Binding Priority}"
                                                                ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type pageModels:VoiceModalPageModel}}, Path=PriorityOptions}" />
                                                        
                                                        <Button Grid.Column="3"
                                                                Text="ðŸ—‘ï¸"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type pageModels:VoiceModalPageModel}}, Path=DeleteTaskCommand}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource DeleteButtonStyle}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                
                <!-- Standalone Tasks Section -->
                <StackLayout IsVisible="{Binding StandaloneTasks.Count, Converter={StaticResource CountToBoolConverter}}">
                    <Label Text="Tasks" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,5" />
                    <CollectionView ItemsSource="{Binding StandaloneTasks}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10,5" ColumnSpacing="5" Margin="0,5,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Entry Text="{Binding Title}" Placeholder="Task title" />
                                    
                                    <DatePicker Grid.Column="1"
                                               Date="{Binding DueDate}"
                                               Format="d"
                                               WidthRequest="130"
                                               IsEnabled="{Binding DueDate, Converter={StaticResource HasValueConverter}}" />
                                    
                                    <Picker Grid.Column="2"
                                           Title="Priority"
                                           WidthRequest="90"
                                           SelectedItem="{Binding Priority}"
                                           ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type pageModels:VoiceModalPageModel}}, Path=PriorityOptions}" />
                                    
                                    <Button Grid.Column="3"
                                           Text="ðŸ—‘ï¸"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type pageModels:VoiceModalPageModel}}, Path=DeleteStandaloneTaskCommand}"
                                           CommandParameter="{Binding}"
                                           Style="{StaticResource DeleteButtonStyle}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                
                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" Margin="0,20,0,20">
                    <Button Grid.Column="0"
                            Text="Re-record"
                            Command="{Binding ReRecordCommand}"
                            Style="{StaticResource ActionButtonStyle}" 
                            HorizontalOptions="End" />
                            
                    <Button Grid.Column="1"
                            Text="Save"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            HorizontalOptions="Start" />
                </Grid>
            </StackLayout>
        </ScrollView>

        <Button x:Name="CloseButton"
                Text="Exit"
                Command="{Binding GoBackCommand}"
                Style="{StaticResource ActionButtonStyle}"
                HorizontalOptions="Start"
                VerticalOptions="Start" />
    </Grid>
</ContentPage>
