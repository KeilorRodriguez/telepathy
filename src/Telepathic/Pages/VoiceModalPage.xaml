<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Telepathic.PageModels"
             xmlns:models="clr-namespace:Telepathic.Models"
             xmlns:aloha="clr-namespace:AlohaKit.Animations;assembly=AlohaKit.Animations"
            xmlns:expander="clr-namespace:Syncfusion.Maui.Toolkit.Expander;assembly=Syncfusion.Maui.Toolkit"
            xmlns:controls="clr-namespace:Telepathic.Pages.Controls"
             x:Class="Telepathic.Pages.VoiceModalPage"
             x:DataType="pageModels:VoiceModalPageModel"
             Shell.PresentationMode="ModalAnimated"
             Title="Dictate Your Day">
    <ContentPage.Resources>
        <Style x:Key="HeaderLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,20,0,20" />
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="MinimumWidthRequest" Value="120" />
        </Style>
        
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="WidthRequest" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="Red" />
        </Style>
    </ContentPage.Resources>
    
    <Grid Padding="20">
        <!-- Recording Phase -->
        <StackLayout x:Name="RecordingView"
                     IsVisible="{Binding Phase, Converter={StaticResource PhaseToRecordingBool}}"
                     VerticalOptions="Center">
            <Image Source="{StaticResource IconMicrophone}" 
                   HeightRequest="100" 
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsRecording, Converter={StaticResource InvertedBoolConverter}}" />
            <Label Text="Tap to Dictate Your Day" 
                   Style="{StaticResource HeaderLabelStyle}" />
            <Button Text="{Binding RecordButtonText}"
                    Command="{Binding ToggleRecordingCommand}"
                    HorizontalOptions="Center"
                    FontSize="Large"
                    WidthRequest="180"
                    HeightRequest="60"
                    Margin="0,20,0,20" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               HorizontalOptions="Center"
                               HeightRequest="50"
                               WidthRequest="50"
                               Margin="0,20,0,0" />
            
            <!-- Visual indicator for recording state -->
            <Border IsVisible="{Binding IsRecording}"
                   BackgroundColor="Red"
                   StrokeShape="RoundRectangle 20"
                   HeightRequest="20"
                   WidthRequest="20"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0">
                <!-- <Border.Triggers>
                    <DataTrigger TargetType="Border" Binding="{Binding IsRecording}" Value="True">
                        <DataTrigger.EnterActions>
                                <aloha:AnimateDouble 
                                    Easing="SinInOut"
                                    TargetProperty="RecordingPulse.Opacity"
                                    From="1.0"
                                    To="0.3"
                                    Duration="100"/>
                        </DataTrigger.EnterActions>
                    </DataTrigger>
                </Border.Triggers> -->
            </Border>
            <Label x:Name="RecordingPulse"
                   Text="Recording..."
                   IsVisible="{Binding IsRecording}"
                   HorizontalOptions="Center"
                   TextColor="Red"
                   Margin="0,5,0,0" />
        </StackLayout>
        
        <!-- Review Phase -->
        
            <StackLayout Padding="20" Spacing="20"
                IsVisible="{Binding Phase, Converter={StaticResource PhaseToReviewBool}}">
                <!-- Transcript Section -->
                <!-- <expander:SfExpander IsExpanded="False">
                    <expander:SfExpander.Header>
                        <Label Text="Show Transcript" FontSize="Medium" FontAttributes="Bold" />
                    </expander:SfExpander.Header>
                    <Border Margin="0,0,0,10">
                        <Label Text="{Binding Transcript}" />
                    </Border>
                </expander:SfExpander> -->
                
                <!-- Projects Section -->
                <StackLayout IsVisible="{Binding Projects.Count, Converter={StaticResource CountToBoolConverter}}"
                    Margin="0,20,0,0">
                    <Label Text="Projects" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,5" />
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Projects}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:Project">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" 
                                        FontSize="Medium" 
                                        FontAttributes="Bold" />
                                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Tasks}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="models:ProjectTask">
                                                <controls:TaskView />
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </StackLayout>                
                
                
                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" Margin="0,20,0,20">
                    <Button Grid.Column="0"
                            Text="Re-record"
                            Command="{Binding ReRecordCommand}"
                            Style="{StaticResource ActionButtonStyle}" 
                            HorizontalOptions="End" />
                            
                    <Button Grid.Column="1"
                            Text="Save"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            HorizontalOptions="Start" />
                </Grid>
            </StackLayout>

        <Button x:Name="CloseButton"
                Text="Exit"
                Command="{Binding GoBackCommand}"
                Style="{StaticResource ActionButtonStyle}"
                HorizontalOptions="Start"
                VerticalOptions="Start" />
    </Grid>
</ContentPage>
