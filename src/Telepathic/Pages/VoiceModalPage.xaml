<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Telepathic.PageModels"
             xmlns:models="clr-namespace:Telepathic.Models"
             xmlns:aloha="clr-namespace:AlohaKit.Animations;assembly=AlohaKit.Animations"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            xmlns:expander="clr-namespace:Syncfusion.Maui.Toolkit.Expander;assembly=Syncfusion.Maui.Toolkit"
            xmlns:controls="clr-namespace:Telepathic.Pages.Controls"
             x:Class="Telepathic.Pages.VoiceModalPage"
             x:DataType="pageModels:VoiceModalPageModel"
             Title="Voice">
    
    
    <Grid Padding="20">
        <!-- Recording Phase -->
        <Grid x:Name="RecordingView"
              IsVisible="{Binding Phase, Converter={StaticResource PhaseToRecordingBool}}"
              RowDefinitions="*,Auto,*">

            <Label 
                HorizontalOptions="Start"
                VerticalOptions="Start">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Let's talk" Style="{StaticResource Title1}" />
                        <Span Text="&#x0a;" />
                        <Span Text="Hit record and tell me what needs doing." />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
              
            <!-- Main recording button container -->
            <Grid Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
                <!-- Ripple animations for voice sensitivity -->
                <Grid x:Name="RippleContainer" 
                      IsVisible="{Binding IsRecording}"
                      HorizontalOptions="Center" 
                      VerticalOptions="Center"
                      InputTransparent="True">
                    <!-- Ripple 1 - Will be animated in code -->
                    <Ellipse x:Name="Ripple1"
                            Fill="#80FF0000"
                            WidthRequest="120"
                            HeightRequest="120"
                            Opacity="0"
                            Scale="1"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                            
                    <!-- Ripple 2 - Will be animated in code -->
                    <Ellipse x:Name="Ripple2"
                            Fill="#80FF0000"
                            WidthRequest="120"
                            HeightRequest="120"
                            Opacity="0"
                            Scale="1"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                            
                    <!-- Ripple 3 - Will be animated in code -->
                    <Ellipse x:Name="Ripple3"
                            Fill="#80FF0000"
                            WidthRequest="120"
                            HeightRequest="120"
                            Opacity="0"
                            Scale="1"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                </Grid>
                
                <!-- Main recording button -->
                <Border x:Name="RecordButton"
                        Background="{toolkit:AppThemeResource Primary}"
                        StrokeShape="RoundRectangle 80"
                        HeightRequest="120"
                        WidthRequest="120"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ToggleRecordingCommand}" />
                    </Border.GestureRecognizers>
                    
                    <Grid>
                        <!-- Microphone icon -->
                        <Image Source="{toolkit:AppThemeResource IconMicrophone}" 
                               HeightRequest="60" 
                               WidthRequest="60"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsVisible="{Binding IsRecording, Converter={StaticResource InvertedBoolConverter}}" />
                        
                        <!-- Stop icon when recording -->
                        <Rectangle Fill="#F2E8C4"
                                  WidthRequest="30"
                                  HeightRequest="30"
                                  IsVisible="{Binding IsRecording}"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center" />
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Status text -->
            <!-- <Label Text="{Binding IsRecording, Converter={StaticResource BoolToObjectConverter}, ConverterParameter='Recording...,Tap to Record'}"
                   Grid.Row="2"
                   Margin="0,20,0,0"
                   HorizontalOptions="Center"
                   TextColor="{Binding IsRecording, Converter={StaticResource BoolToObjectConverter}, ConverterParameter='Red,Default'}"/> -->
            
            <!-- Activity indicator for busy state -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               Grid.Row="2"
                               HorizontalOptions="Center"
                               HeightRequest="30"
                               WidthRequest="30"
                               Margin="0,60,0,0" />
        </Grid>

        <controls:ActivityIndicatorView
                            IsVisible="{Binding IsAnalyzingContext}"
                            IsRunning="{Binding IsAnalyzingContext}"
                            HorizontalOptions="Start"
                            Title="{Binding AnalysisStatusTitle}"
                            Detail="{Binding AnalysisStatusDetail}"
                            MinimumWidthRequest="200"
                            MinimumHeightRequest="100"
                            ShimmerStartColor="#4a90e2"
                            ShimmerEndColor="#9b59b6"/>
        
        <!-- Review Phase -->
        <ScrollView IsVisible="{Binding Phase, Converter={StaticResource PhaseToReviewBool}}"> 
            <StackLayout Padding="20" Spacing="20">

                

                <!-- Transcript Section -->
                <!-- <expander:SfExpander IsExpanded="False">
                    <expander:SfExpander.Header>
                        <Label Text="Show Transcript" FontSize="Medium" FontAttributes="Bold" />
                    </expander:SfExpander.Header>
                    <Border Margin="0,0,0,10">
                        <Label Text="{Binding Transcript}" />
                    </Border>
                </expander:SfExpander> -->
                
                <!-- Projects Section -->
                <StackLayout IsVisible="{Binding Projects.Count, Converter={StaticResource CountToBoolConverter}}"
                    Spacing="{StaticResource LayoutSpacing}"
                    >
                    <Label Text="Projects" Style="{StaticResource Title1}" />
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Projects}"
                        Spacing="{StaticResource LayoutSpacing}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:Project">
                                <VerticalStackLayout Spacing="{StaticResource LayoutSpacing}">
                                    <Label Text="{Binding Name}" 
                                        Style="{StaticResource Title2}" />
                                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Tasks}"
                                        Spacing="{StaticResource LayoutSpacing}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="models:ProjectTask">
                                                <controls:TaskView 
                                                    TaskCompletedCommand="{Binding TaskCompletedCommand, Source={RelativeSource AncestorType={x:Type pageModels:IProjectTaskPageModel}}, x:DataType=pageModels:IProjectTaskPageModel}"
                                                    AcceptRecommendationCommand="{Binding AcceptRecommendationCommand, Source={RelativeSource AncestorType={x:Type pageModels:IProjectTaskPageModel}}, x:DataType=pageModels:IProjectTaskPageModel}"
                                                    RejectRecommendationCommand="{Binding RejectRecommendationCommand, Source={RelativeSource AncestorType={x:Type pageModels:IProjectTaskPageModel}}, x:DataType=pageModels:IProjectTaskPageModel}" />
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </StackLayout>                
                
                
                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" Margin="0,20,0,20" ColumnSpacing="20">
                    <Button Grid.Column="0"
                            Text="Re-record"
                            Command="{Binding ReRecordCommand}"
                            HorizontalOptions="End" />
                            
                    <Button Grid.Column="1"
                            Text="Save"
                            Command="{Binding SaveCommand}"
                            HorizontalOptions="Start" />
                </Grid>
            </StackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
