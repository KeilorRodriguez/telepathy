<?xml version="1.0" encoding="utf-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Telepathic.Pages.Controls"
    x:Class="Telepathic.Pages.Controls.ActivityIndicatorView"
    x:DataType="controls:ActivityIndicatorView"
    x:Name="Root">
    <Grid 
        RowSpacing="6" ColumnSpacing="6"
        RowDefinitions="Auto, Auto" ColumnDefinitions="10,*"
        HorizontalOptions="Fill"
        WidthRequest="-1">
        <controls:SkiaAnimatedGradientTextSK 
            x:Name="TitleText"
            Text="{Binding Title}"
            FontSize="42"
            MinimumHeightRequest="40"
            MinimumWidthRequest="200"
            ShowDebugBackground="False"
            HorizontalOptions="Fill"
            Grid.ColumnSpan="2" />

        <BoxView WidthRequest="2" Color="White" 
            Grid.Column="0" 
            Grid.Row="1"
            VerticalOptions="Fill" HorizontalOptions="Start" />
            
        <Label 
            Grid.Column="1"
            Grid.Row="1"
            x:Name="DetailLabel"
            Text="{Binding Detail}"
            LineBreakMode="WordWrap"
            MaxLines="3"
            FontSize="18"
            HorizontalOptions="Fill"
            VerticalOptions="Start"
            TextType="Text"/>
    </Grid>
</ContentView>
