<?xml version="1.0" encoding="utf-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Telepathic.Pages.Controls"
    x:Class="Telepathic.Pages.Controls.ActivityIndicatorView"
    x:Name="Root">
    <VerticalStackLayout Spacing="6">
        <controls:AnimatedGradientText 
            x:Name="TitleText"
            Text="{Binding Title, Source={x:Reference Root}}"
            ShowDebugBackground="False"
            HeightRequest="40"
            WidthRequest="250"
            HorizontalOptions="Start" />
            
        <Label 
            x:Name="DetailLabel"
            Text="{Binding Detail, Source={x:Reference Root}}"
            FontSize="14"
            HorizontalOptions="Start"/>
    </VerticalStackLayout>
</ContentView>
