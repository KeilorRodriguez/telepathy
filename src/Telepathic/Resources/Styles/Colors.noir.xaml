<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#AC3420</Color>
    <Color x:Key="SecondaryDarkText">#AC3420</Color>
    <Color x:Key="Tertiary">#235C57</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <toolkit:AppThemeColor x:Key="Primary"
        Light="#AC3420"
        Dark="#AC3420" />

    <toolkit:AppThemeColor x:Key="Background"
        Light="#F2E8C4"
        Dark="#1C201E" />

    <toolkit:AppThemeColor x:Key="OnBackground"
        Light="#1F1F1F"
        Dark="#F2E8C4" />

    <toolkit:AppThemeColor x:Key="Surface1"
        Light="#DDD2A0"
        Dark="#292929" />

    <toolkit:AppThemeColor x:Key="PlaceholderColor"
        Light="{StaticResource Gray200}"
        Dark="{StaticResource Gray500}" />

    <toolkit:AppThemeColor x:Key="DisabledColor"
        Light="{StaticResource Gray300}"
        Dark="{StaticResource Gray600}" />    

    <Color x:Key="LightBackground">#F2F2F2</Color>
    <Color x:Key="DarkBackground">#17171a</Color>
    <Color x:Key="LightSurface1">#E0E0E0</Color>
    <Color x:Key="DarkSurface1">#222228</Color>

    <LinearGradientBrush x:Key="AIBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#8855FF" Offset="0.0" />
        <GradientStop Color="#FF559E" Offset="0.5" />
        <GradientStop Color="#55DDFF" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>